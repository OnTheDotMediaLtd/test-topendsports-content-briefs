{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm install:*)",
      "Bash(node:*)",
      "Bash(python*:*)",
      "Bash(pip*:*)",
      "mcp__topendsports-briefs__*"
    ]
  },
  "enableAllProjectMcpServers": true
}
